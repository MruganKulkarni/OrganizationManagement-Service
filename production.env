# Production Environment Configuration
# Copy this to .env and update with your production values

# Database Configuration
MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/org_master_db?retryWrites=true&w=majority
DATABASE_NAME=org_master_db

# Security Configuration (CHANGE THESE IN PRODUCTION!)
JWT_SECRET_KEY=CHANGE-THIS-TO-A-SECURE-RANDOM-STRING-MIN-32-CHARACTERS
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# Application Configuration
ENVIRONMENT=production
LOG_LEVEL=INFO

# CORS Configuration (Update with your frontend domains)
CORS_ORIGINS=["https://yourdomain.com","https://app.yourdomain.com","https://admin.yourdomain.com"]

# Rate Limiting (Optional)
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Monitoring (Optional)
ENABLE_METRICS=true
METRICS_PORT=9090